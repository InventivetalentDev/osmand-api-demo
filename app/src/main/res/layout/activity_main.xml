<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.osmand.osmandapidemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/osmand_service"
                android:textAppearance="@style/TextAppearance.ListItemTitle"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_places"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addFavoriteButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_fav_dark"
            android:drawableStart="@drawable/ic_action_fav_dark"
            android:text="@string/add_favorite"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="wrap_content"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addMapMarkerButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_flag_dark"
            android:drawableStart="@drawable/ic_action_flag_dark"
            android:text="@string/add_map_marker"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/audio_video_plugin"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/startAudioRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_micro_dark"
            android:drawableStart="@drawable/ic_action_micro_dark"
            android:text="@string/start_audio_recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/startVideoRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_video_dark"
            android:drawableStart="@drawable/ic_action_video_dark"
            android:text="@string/start_video_recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_rec_stop"
            android:drawableStart="@drawable/ic_action_rec_stop"
            android:text="@string/stop_recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/takePhotoButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_photo_dark"
            android:drawableStart="@drawable/ic_action_photo_dark"
            android:text="@string/take_photo"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gpx_recording"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/startGpxRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_play"
            android:drawableStart="@drawable/ic_action_play"
            android:text="@string/start_gpx_recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopGpxRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_rec_stop"
            android:drawableStart="@drawable/ic_action_rec_stop"
            android:text="@string/stop_gpx_recording"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gpx_display_navigation"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/showGpxButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_polygom_dark"
            android:drawableStart="@drawable/ic_action_polygom_dark"
            android:text="@string/show_gpx"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/navigateGpxButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_gdirections_dark"
            android:drawableStart="@drawable/ic_action_gdirections_dark"
            android:text="@string/navigate_gpx"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/navigation"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/navigateButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_gdirections_dark"
            android:drawableStart="@drawable/ic_action_gdirections_dark"
            android:text="@string/navigate"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/getInfoButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_gabout_dark"
            android:drawableStart="@drawable/ic_action_gabout_dark"
            android:text="@string/get_info"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <include layout="@layout/card_bottom_divider"/>
    </LinearLayout>

</ScrollView>