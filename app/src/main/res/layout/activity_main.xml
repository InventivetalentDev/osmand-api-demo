<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/main_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.osmand.osmandapidemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/categoryStyle"
            android:orientation="horizontal">

            <TextView
                android:textAppearance="@style/TextAppearance.ListItemTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="OsmAnd Service"/>

            <android.support.v7.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My places"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addFavoriteButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add favorite"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="wrap_content"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addMapMarkerButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add map marker"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Audio/video plugin"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/startAudioRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start audio recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/startVideoRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start video recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/takePhotoButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take photo"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPX recording"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/startGpxRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start gpx recording"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/stopGpxRecButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop gpx recording"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPX display/navigation"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/showGpxButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show gpx"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/navigateGpxButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigate gpx"/>

        <include layout="@layout/card_bottom_divider"/>

        <include layout="@layout/card_top_divider"/>

        <TextView
            style="@style/categoryStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigation"/>

        <View
            style="@style/divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/navigateButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Navigate"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/getInfoButton"
            style="@style/row_item_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get info"/>

        <View
            style="@style/short_divider_style"
            android:layout_width="match_parent"/>

        <include layout="@layout/card_bottom_divider"/>
    </LinearLayout>

</ScrollView>